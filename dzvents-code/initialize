-- setting some test values on devices to test setting of various operating modes

return {
	on = {
		timer = {
			'at 20:57',					-- specific time, to be adapted to run once for initial update
		}
	},
	logging = {
		level = domoticz.LOG_INFO,
		marker = 'template',
	},
	execute = function(domoticz, timer)
	    -- setting some test values on devices to test setting of various operating modes
		domoticz.devices("Manual Mode periodnr").updateText("0")
		domoticz.devices("Manual Mode starttime").updateText("10:00")
		domoticz.devices("Manual Mode endtime").updateText("12:00")
		domoticz.devices("Manual Mode weekdays").updateText("1010111")
		domoticz.devices("Manual Mode power").updateEnergy(-800)
		domoticz.devices("Passive Mode power").updateEnergy(-400)
		domoticz.devices("Passive Mode countdown s").updateText("300")
		
	end
}

