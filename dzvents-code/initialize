-- setting some test values on devices to test setting of various operating modes

return {
	on = {
		timer = {
			'at 13:05',					-- specific time, to be adapted to run once for initial update
			-- note: set script to inactive/off when update done
		}
	},
	logging = {
		level = domoticz.LOG_INFO,
		marker = 'template',
	},
	execute = function(domoticz, timer)
	    -- setting some test values on devices to test setting of various operating modes
		domoticz.devices("MV:Manual Mode periodnr").updateText("0")
		domoticz.devices("MV:Manual Mode starttime").updateText("10:00")
		domoticz.devices("MV:Manual Mode endtime").updateText("12:00")
		domoticz.devices("MV:Manual Mode weekdays").updateText("1010111")
		domoticz.devices("MV:Manual Mode power").updateEnergy(-800)
		domoticz.devices("MV:Passive Mode power").updateEnergy(400)
		domoticz.devices("MV:Passive Mode countdown s").updateText("120")
		
	end
}
